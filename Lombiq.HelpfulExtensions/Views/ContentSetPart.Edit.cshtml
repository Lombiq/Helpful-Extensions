@model Lombiq.HelpfulExtensions.Extensions.ContentSets.ViewModels.ContentSetPartViewModel

<p>@T["Information about the \"{0}\" content set part.", Model.Definition.Name]</p>

<fieldset asp-for="Key" label="@T["Key"]" readonly="true"></fieldset>

@if (!Model.IsNew)
{
    <fieldset class="form-group mb-3 col-xl-6">
        <label class="form-label">@T["Other members of this content set"]</label>
        <ul>
            @foreach (var link in Model.MemberLinks)
            {
                <shape type="ContentSetPart_MemberLink"
                       prop-Link="@link"
                       prop-ContentSetPart="@Model.ContentSetPart"
                       prop-Definition="@Model.Definition"></shape>
            }
        </ul>
    </fieldset>
}
